<h1>Edit Profile</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :email, "Email" %>
  <%= f.email_field :email, autofocus: true, :input_html => { :value => @user.email} %>

  <%= f.label :profile_photo, "Profile Photo Upload" %>
  <%= f.file_field :profile_photo %>

  Delete My Photo
  <%= check_box_tag "delete-profile-photo", "1" %>

  <%= f.label :about_me, "About Me" %>
  <%= f.text_field :about_me %>

  <div class='submit-container'>
    <%= f.submit "Update Profile", class: 'button' %>
  </div>
  <% end %>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
<% end %>
