  <div class='parallax-small parallax-small__profile-page'>
    <div class="parallax-small--title">
      <%= @user.username %>
    </div>
  </div>
</section>

  <div class='bumper-25'></div>
  <div class='bumper-25'></div>

<section>
  <div class='container'>
    <div class='row'>
      <%= link_to 'Edit Profile', edit_user_path(@user), class: 'button' %>
    </div>

    <div class='row'>

      <div class='columns small-12 medium-9 text-center'>
        <% if @user.profile_photo %>
          <img id='profile-photo' src="<%= @user.profile_photo %>" alt="User Profile Picture" width=300px height=300px />
        <% end %>

        <h1> <%= @user.username %> </h1>

        <p> Email: <h3><%= @user.email %></h3> </p>

        <% if @user.instruments_played %>
          <h1> My Instrument </h1>
          <p><%= @user.instruments_played %></p>
        <% end %>

        <% if @user.favotorite_genre %>
          <h1> My Favorite Genre </h1>
          <p><%= @user.favotorite_genre %></p>
        <% end %>

        <% if @user.about_me %>
          <h1> About Me </h1>
          <p><%= @user.about_me %></p>
        <% end %>

      </div>

      <div class='columns small-12 medium-3'>
        <h4><%= @user.first_name %>'s Lessons</h4>
        <% if !@user.is_student? %>
          <%= link_to 'Add a lesson', new_lesson_path, class: '' %>
        <% end %>
        <div class="bumper-25"></div>
        <!-- React component for all of teacher created lessons -->
        <div id='teacher-lessons'></div>
      </div>

    </div>
  </div>
</section>

<div class='bumper-100'></div>
