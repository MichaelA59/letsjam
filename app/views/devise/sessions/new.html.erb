<section class='test'>
  <div class='parallax-small parallax-small__login-page'>
    <div class="parallax-small--title"> Log-in </div>
  </div>
</section>

<div class='bumper-100'></div>

<section>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-box'}) do |f| %>

      <div class="new_user--field">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="new_user--field">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="new_user--field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="new_user--field__submit-container">
        <%= f.submit "Log in", class: 'button' %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
</section>

<div class='bumper-100'></div>
